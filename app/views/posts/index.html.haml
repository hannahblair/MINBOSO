%div
  .jumbotron
    %h1 MINBOSO

%table.table
  %thead
    %tr
      %th Title
      %th Body
      %th Date
      %th{:colspan => "3"}

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= post.created_at.to_date
        %td= link_to 'Show', post, class: 'btn btn-info btn-lg active btn-sm'
        %td= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning btn-lg active btn-sm'
        %td= link_to 'Delete', post, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger btn-lg active btn-sm"

%br

= link_to 'New Post', new_post_path, class: 'btn btn-primary'
